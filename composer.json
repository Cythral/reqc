{
	"name" : "cythral/reqc",
	"type" : "library",
	"description" : "A library for handling incoming and outgoing requests.",
	"license" : "GPL-3.0",
	"author" : {
		"name" : "cythral",
		"email" : "talen@cythral.com"
	},

	"require" : {
		"php" : ">=7.0",
		"ext-curl" : "*"
	},

	"autoload" : {
		"psr-4" : {
			"reqc\\" : "src/lib/"
		},

		"files" : [
			"src/reqc.php"
		],

		"exclude-from-classmap" : [
			"/src/reqc.php"
		]
	},
	"require-dev": {
		"kherge/box": "^2.7",
		"satooshi/php-coveralls": "dev-master"
	}
}
